RUN ONCE "1:/lib/log".

FUNCTION STAGE_SETUP
{
    WHEN STAGE:SOLIDFUEL <= 0 AND STAGE:LIQUIDFUEL <= 0 THEN
    {
        ML( "Staging." ).
        STAGE.
        
        STAGE_SETUP().
    }
}

FUNCTION HANDLE_SIMPLE_STAGE
{
    PARAMETER AMOUNT.
    PARAMETER TILT.
    PARAMETER ANGLE.
    LOCK STEERING TO HEADING( ANGLE, TILT ).
    LOCK THROTTLE TO AMOUNT.
    STAGE_SETUP().
}
